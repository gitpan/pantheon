#!/usr/bin/env perl

use strict;
use warnings;

$| ++;

use Vulcan::OptConf;
use Cronos::Policy;

$Vulcan::OptConf::THIS = 'cronos';
$Vulcan::OptConf::ARGC = 1;

=head1 SYNOPSIS

 $0 name --level number

=cut
my %o = Vulcan::OptConf->load()->get( 'level=i' )->dump();
my $time = time;
my $who = Cronos::Policy->new( "$o{data}/$ARGV[0]" )
   ->set( $time - 86400, $time + 86400 )->get( $time, $o{level} || 1 );

print $who->{item}, "\n";
exit 0;
