#!/usr/bin/perl -w

=head1 SYNOPSIS

 $0 [ range .. ] [ fping options .. ]

=cut
use strict;

use Hermes;
use Vulcan::OptConf;

$| ++;

my ( $range, @node ) = Hermes->new( Vulcan::OptConf->load()->dump( 'range' ) );

push @node, shift while @ARGV && $ARGV[0] !~ /^-/;
map { push @ARGV, $range->load( $_ )->list() } @node;
system( 'fping', @ARGV );

exit 0;
